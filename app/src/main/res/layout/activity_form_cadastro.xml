<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.form.FormCadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-174dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3C3F41">

            <EditText
                android:id="@+id/input_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Descricao"
                app:layout_constraintStart_toStartOf="@+id/input_Descricao"
                app:layout_constraintTop_toBottomOf="@+id/input_Descricao" />

            <Button
                android:id="@+id/btn_CadastrarUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="#2B2B2B"
                android:text="Salvar"
                android:textColor="#A7AAAC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/input_ConfSenha"
                app:layout_constraintStart_toStartOf="@+id/input_ConfSenha"
                app:layout_constraintTop_toBottomOf="@+id/input_ConfSenha" />

            <EditText
                android:id="@+id/input_ConfSenha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Senha"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/input_Senha"
                app:layout_constraintTop_toBottomOf="@+id/input_Senha" />

            <EditText
                android:id="@+id/input_Senha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Email"
                app:layout_constraintStart_toStartOf="@+id/input_Email"
                app:layout_constraintTop_toBottomOf="@+id/input_Email" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoltar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="#00FFFFFF"
                app:icon="@drawable/ic_back"
                app:iconSize="35dp"
                app:iconTint="#A7AAAC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="11dp"
                android:text="CADASTRAR"
                android:textAlignment="center"
                android:textColor="#A7AAAC"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/input_Img"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="#00C80D0D"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_image_24"
                android:tint="#A7AAAC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/input_Nome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="20dp"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_Img" />

            <EditText
                android:id="@+id/input_Descricao"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Breve apresentação pessoal..."
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Site"
                app:layout_constraintStart_toStartOf="@+id/input_Site"
                app:layout_constraintTop_toBottomOf="@+id/input_Site" />

            <EditText
                android:id="@+id/input_Linkedin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Linkedin"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Nome"
                app:layout_constraintStart_toStartOf="@+id/input_Nome"
                app:layout_constraintTop_toBottomOf="@+id/input_Nome" />

            <EditText
                android:id="@+id/input_Github"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="GitHub"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Linkedin"
                app:layout_constraintStart_toStartOf="@+id/input_Linkedin"
                app:layout_constraintTop_toBottomOf="@+id/input_Linkedin" />

            <EditText
                android:id="@+id/input_Site"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:background="@color/white"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Ex: Behance, Portifolio"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="@+id/input_Github"
                app:layout_constraintStart_toStartOf="@+id/input_Github"
                app:layout_constraintTop_toBottomOf="@+id/input_Github" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>